<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DetailsActivity" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.DetailsActivity.ExpandedToolbarTitle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.DetailsActivity.CollapseToolbarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
