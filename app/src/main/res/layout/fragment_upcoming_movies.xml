<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context="com.may.tmdb.movie.upcoming.UpcomingMoviesFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srlUpcomingMovieRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUpcomingMovies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:id="@+id/clUpcomingMoviesEmptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_popcorn"
                android:layout_width="150dp"
                android:id="@+id/ivUpcomingMoviesEmptyImage"
                android:cropToPadding="true"
                android:layout_height="150dp"

                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nenhum filme encontrado!"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@id/ivUpcomingMoviesEmptyImage"
                android:id="@+id/textView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>