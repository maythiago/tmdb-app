<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="200dp">
    <ImageView
            android:id="@+id/ivUpcomingMoviesTitlePlaceholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#cccccc"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_image_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvUpcomingMoviesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87000000"
            android:ellipsize="end"
            android:lines="1"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ivUpcomingMoviesTitlePlaceholder"
            app:layout_constraintLeft_toLeftOf="@id/ivUpcomingMoviesTitlePlaceholder"
            app:layout_constraintRight_toRightOf="@id/ivUpcomingMoviesTitlePlaceholder"
            tools:text="Teste"/>
</androidx.constraintlayout.widget.ConstraintLayout>